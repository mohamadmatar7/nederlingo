<section class="auth-container login">
  <h4>Welkom bij Nederlingo👋🏼</h4>
  {{!-- <p>Or, <a href="/register">register</a></p> --}}
  {{>form-errors this}}
  <form method="post" action="login">
    {{#each inputs}}
      {{>form-input this}}
    {{/each}}
    <div class="footer-container">
      <input type="reset" class="btn btn-tertiary button-secondary" value="Wissen">
      <input type="submit" class="btn btn-primary button-base" value="Inloggen">
    </div>
  </form>
</section>