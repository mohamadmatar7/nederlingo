<div class="container">
  {{>sidebar_leerling}}
  <div class="main-container">
    <div class="welcome-label">
      <h1>Bekijk je vakken!</h1>
    </div>
    <div class="card-container__3items">
      {{#each courses}}
      <li style="list-style: none;">
        <div class="icon-card">
          <div class="icon-card--label">
            <h3>{{this.name}}</h3>
          </div>
          <div class="icon-card--img">
            <img src="/images/icons/nederlands.png" alt="nederlands" />
          </div>
          <div class="icon-card--label">
          </div>
        </div>
      </li>
      {{/each}}
    </div>
  </div>
</div>
