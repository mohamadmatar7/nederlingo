<div class="container">


   {{>sidebar_directeur}}

<div class="main-container">

  <div class="card-container">

{{#each courses}}
<li class="icon-card" style="list-style: none;">
    <a href="/vak/{{this.id}}" class="icon-card--label">
    <div class="icon-card--label">
      <h2>{{ this.name }}</h2>
    </div>
    <div class="icon-card--img">
      <img src="/images/icons/vakken.png" alt="vakken" />
    </div>
  </a>
</li>
{{/each}}
<form action="/subjects" method="post">
  <input type="text" name="name" placeholder="Vaknaam">
  <input type="submit" value="Vak toevoegen">
</form>
</div>
<script>
      const addClassroom = document.getElementById('test');
    addClassroom.addEventListener('click', function() {
        const classroomId = document.querySelector('select[name="classrooms"]').value;
        const userId = addClassroom.getAttribute('data-id');
        console.log(classroomId);
        console.log(userId);
        fetch(`/vakken/addtoclass`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    classId: classroomId,
                    userId: userId
                })
            })
            .then(response => response.json())
            .then(data => {
                console.log(data);
            })
            .catch((error) => {
                console.error('Error:', error);
            });
    });
</script>
