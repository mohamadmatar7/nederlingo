<div class="container">


   {{>sidebar_directeur}}

<div class="main-container">

  <div class="card-container">

{{#each classes}}
  <li class="icon-card">
    <a href="/alleklassen/{{this.id}}" class="icon-card--label">
      <h2>{{this.label}}</h2>
    </a>
    <div class="icon-card--img">
      <img src="/images/icons/vakken.png" alt="vakken" />
    </div>
  </li>
{{/each}}
<form action="/classes" method="post">
  <input type="text" name="label" placeholder="Klasnaam">
  <input type="submit" value="Klas toevoegen">
</form>
</div>
